{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Area chart using density estimation to show a probability density or cumulative distribution.",

  "padding": 50,

  "params": [
    { "name": "HostAvail", "value": 0.6,
      "bind": {"input": "range", "min": 0.5, "max": 1.0, "step": 0.01} },
    { "name": "Hosts", "value": 8,
      "bind": {"input": "range", "min": 1, "max": 30, "step": 1} }
  ],

  "data": {
    "name": "points"
  },

  "vconcat": [{
    "title": "System Availability",
    "width": 500,
    "height": 300,
    "mark": {
      "type": "line",
      "interpolate": "linear",
      "strokeWidth": 2.0
    },
    "encoding": {
      "x": {
        "field": "x",
        "type": "quantitative",
        "title": "Hosts"
      },
      "y": {
        "field": "y",
        "title": "Availability",
        "type": "quantitative"
      }
    }
  }]
}
